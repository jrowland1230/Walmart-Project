@model SearchQueryViewModel;
@{ ViewData["Title"] = "Products"; }

@{if (Model.Products != null && Model.Products.Count > 0)
    {
        <div class="row my-lg-5">
            <div class="col-lg-12">
                <h3>1 - @Model.NumItems of @string.Format("{0:#,#}", Model.TotalResults) results</h3>
            </div>
        </div>

        <div class="row my-lg-5">
            @for (int i = 0; i < Model.Products.Count; i++)
            {
                <div class="col-lg-4">
                    <a href="details/@Model.Products[i].ItemId" class="product-link">
                        <img src="@Model.Products[i].MediumImage" />
                        <h5 class="my-2">@Model.Products[i].Name</h5>
                    </a>
                    <h3>@Model.Products[i].SalePrice.ToString("c")</h3>
                </div>
                @if ((i % 3) == 2)
                {
                    <div class="col-lg-12">
                        <hr />
                    </div>
                }
            }
        </div>
    }
}
