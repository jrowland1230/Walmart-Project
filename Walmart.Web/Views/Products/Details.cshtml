@model ProductViewModel;
@{ ViewData["Title"] = "Product Details"; }

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/products/search">Search</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>
<div class="row my-lg-5">
    <div class="col-lg-6">
        <img src="@Model.LargeImage" />
    </div>
    <div class="col-lg-6">
        <div class="row">
            <div class="col-lg-12">
                <h2>@Model.Name</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h4><strong>@Model.SalePrice.ToString("c")</strong></h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <p>@(Html.Raw(System.Net.WebUtility.HtmlDecode(Model.LongDescription)))</p>
            </div>
        </div>
    </div>
</div>
<div class="container text-center my-5">

    <hr />

    @{ if (Model.Recommendations != null && Model.Recommendations.Count > 0)
        {
            <h2>Product Recommendations</h2>
            <div class="row mx-auto my-auto my-lg-5">
                <div id="recipeCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        @for (int i = 0; i < Model.Recommendations.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <ul class="thumbnails">
                                    <li class="">
                                        <div class="">
                                            <div class="thumbnail">
                                                <a href="@Model.Recommendations[i].ItemId"><img src="@Model.Recommendations[i].LargeImage" alt=""></a>
                                            </div>
                                            <div class="caption">
                                                <h5>@Model.Recommendations[i].Name</h5>
                                                <h4><strong>@Model.SalePrice.ToString("c")</strong></h4>
                                                <a class="btn btn-mini" href="@Model.Recommendations[i].ItemId">» See Details</a>
                                            </div>
                                        </div>
                                    </li>

                                </ul>
                            </div>
                        }

                    </div>
                    <a class="carousel-control-prev" href="#recipeCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#recipeCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        }
        else
        {
            <h2>No Product Recommendations</h2> 
        }
    }

</div>